{% extends '::base.html.twig' %}

{% block title %}Administrador{% endblock %}

{% block stylesheets %}
    <!-- Stylesheets -->
    <link rel="stylesheet" href="{{asset('css/bootstrap.css')}}">
    <link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="{{asset('css/style.css')}}">
    <link rel="stylesheet" href="{{asset('css/bootstrap-responsive.html')}}">
    <link rel="stylesheet" href="{{asset('css/admin.css')}}">
{% endblock %}

{% block body %}

    {% set route = app.request.get('_route') %}

    {% set categorias = "" %}
    {% set colores = "" %}
    {% set modelos = "" %}
    {% set productos = "" %}
    {% set galerias = "" %}  
    {% set direcciones = "" %}
    {% set envios = "" %}
    {% set pagos = "" %}
    {% set ventas = "" %}  
    {% set detventas = "" %}  
    {% set usuarios = "" %}
    {% set configuraciones = "" %}

    {% if route == "categorias" %}
        {% set categorias = "class=open" %}
    {% elseif route == "colores" %}
        {% set colores = "class=open" %}
    {% elseif route == "modelos" %}
        {% set modelos = "class=open" %}
    {% elseif route == "productos" %}
        {% set productos = "class=open" %}
    {% elseif route == "galerias" %}
        {% set galerias = "class=open" %}
    {% elseif route == "direcciones" %}
        {% set direcciones = "class=open" %}
    {% elseif route == "envios" %}
        {% set envios = "class=open" %}
    {% elseif route == "pagos" %}
        {% set pagos = "class=open" %}
    {% elseif route == "ventas" %}
        {% set ventas = "class=open" %}
    {% elseif route == "detventas" %}
        {% set detventas = "class=open" %}
    {% elseif route == "usuarios" %}
        {% set usuarios = "class=open" %}
    {% elseif route == "configuraciones" %}
        {% set configuraciones = "class=open" %}       
    {% endif %}

    <header>
        <div class="navbar navbar-fixed-top bs-docs-nav" role="banner">
            <div class="container">
                <!-- Menu button for smallar screens -->
                <div class="navbar-header">
                    <button class="navbar-toggle btn-navbar" type="button" data-toggle="collapse" data-target=".bs-navbar-collapse">
                        <span>Menu</span>
                    </button>
                    <a href="#" class="pull-left menubutton hidden-xs">
                        <i class="fa fa-bars"></i>
                    </a>
                    <!-- Site name for smallar screens -->
                    <a href="{{path('homepage')}}" class="navbar-brand">
                        <span class="bold">Dashboard</span>
                    </a>
                </div>

                <!-- Navigation starts -->
                <nav class="collapse navbar-collapse bs-navbar-collapse" role="navigation">         

                    <!-- Links -->
                    <ul class="nav navbar-nav pull-right">
                        <li class="dropdown pull-right user-data">            
                            <a data-toggle="dropdown" class="dropdown-toggle" href="#">
                                <img src="/apple-touch-icon.png" width="25" height="25"/>
                                {{app.user.username|default('anonimo')}} <b class="caret"></b>
                            </a>
                            <!-- Dropdown menu -->
                            <ul class="dropdown-menu">
                                <li>
                                    <a href="#">
                                        <i class="fa fa-key"></i> Salir
                                    </a>
                                </li>
                            </ul>
                        </li>
                    </ul>
                </nav>
            </div>
        </div>
    </header>
    <!-- Main content starts -->
    <div class="content">
        <!-- Sidebar -->
        <div class="sidebar">
            <div class="sidebar-dropdown">
                <a href="#">Navegador</a>
            </div>
            <!-- Search form -->
            <form class="navbar-form" role="search" action="#search" method="post">
                <div class="form-group">
                    <input id="buscarItem" name="buscarItem" type="text" class="form-control" placeholder="buscar">
                    <button class="btn search-button" type="submit">
                        <i class="fa fa-search"></i>
                    </button>
                </div>
            </form>
            <!--- Sidebar navigation -->
            <!-- If the main navigation has sub navigation, then add the class "has_sub" to "li" of main navigation. -->
            <ul id="nav">
                <!-- Main menu with font awesome icon -->
                <li>
                    <a {{categorias}}  href="{{path('categorias')}}">
                        <i class="fa fa-th-large"></i> <span>Categorias</span>
                    </a>
                </li>
                <li>
                    <a {{colores}}  href="{{path('colores')}}">
                        <i class="fa fa-th-list"></i> <span>Colores</span>
                    </a>
                </li>
                <li>
                    <a {{modelos}}  href="{{path('modelos')}}">
                        <i class="fa fa-th-list"></i> <span>Modelos</span>
                    </a>
                </li>
                <!--li>
                    <a {{productos}}  href="{{path('productos')}}">
                        <i class="fa fa-th-list"></i> <span>Productos</span>
                    </a>
                </li-->
                <!--li>
                    <a {{galerias}} href="{{path('galerias')}}">
                        <i class="fa fa-tumblr"></i> <span>Galerias</span>
                    </a>
                </li-->
                <li>
                    <a {{usuarios}} href="{{path('usuarios')}}">
                        <i class="fa fa-user"></i> <span>Usuarios</span>
                    </a>
                </li>
                <li>
                    <a {{direcciones}} href="{{path('direcciones')}}">
                        <i class="fa fa-road"></i> <span>Direcciones</span>
                    </a>
                </li>
                <li>
                    <a {{ventas}} href="{{path('ventas')}}">
                        <i class="fa fa-cart-plus"></i> <span>Ventas</span>
                    </a>
                </li>
                <li>
                    <a {{detventas}} href="{{path('detventas')}}">
                        <i class="fa fa-cubes"></i> <span>Detalle de ventas</span>
                    </a>
                </li>
                <li>
                    <a {{pagos}} href="{{path('pagos')}}">
                        <i class="fa fa-credit-card"></i> <span>Pagos</span>
                    </a>
                </li>
                <li>
                    <a {{configuraciones}} href="{{path('configuraciones')}}">
                        <i class="fa fa-gears"></i> <span>Configuraciones</span>
                    </a>
                </li>
            </ul>
        </div>
        <!-- Sidebar ends -->
        {% block mainbar %} {% endblock %}
    </div>
    <!-- Content ends -->
    <!-- Footer starts -->
    <footer>
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <!-- Copyright info -->
                    <!--p class="copy">Copyright &copy; 2012 | <a href="#">Your Site</a> </p-->
                    <p></p>
                </div>
            </div>
        </div>
    </footer> 	
    <!-- Footer ends -->
    <!-- Scroll to top -->
    <span class="totop"><a href="#"><i class="fa fa-chevron-up"></i></a></span>
    <div class="loader"></div>
{% endblock %}

{% block javascripts %}
    <!-- JS -->
    <script src="{{asset('js/jquery.js')}}"></script>
    <!--script src="{{asset('js/underscore-min.js')}}"></script-->
    <!--script src="{{asset('js/backbone-min.js')}}"></script-->
    <!--script src="{{asset('js/swig.js')}}"></script-->
    <script src="{{asset('js/bootstrap.js')}}"></script>
    <script>
        $(document).ready(function () {
            $(".loader").fadeOut();
        });
    </script>
{% endblock %}
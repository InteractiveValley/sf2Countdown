{% extends 'BackendBundle::layout.html.twig' %}

{% block stylesheets %}
  {{ parent() }}
    <!-- Datatables -->
    <link rel="stylesheet" href="{{asset('js/datatables/css/dataTables.bootstrap.css')}}">
    <!-- Main stylesheet -->
    <link rel="stylesheet" href="{{asset('css/style.css')}}">
    <!-- Widgets stylesheet -->
    <link rel="stylesheet" href="{{asset('css/widgets.css')}}">   
    <!-- Gritter Notifications stylesheet -->
    <link rel="stylesheet" href="{{asset('css/jquery.gritter.css')}}"> 
{% endblock %}

{% block mainbar %}
    <!-- Main bar -->
    <div class="mainbar">
        <!-- Page heading -->
        <div class="page-head">
            <h2 class="pull-left">Colores</h2>
            <div class="clearfix"></div>
            <!-- Breadcrumb -->
            <div class="bread-crumb">
                <a href="{{path('homepage')}}"><i class="fa fa-home"></i>Dashboard</a> 
                  <span class="divider">/</span>  
                  <a href="{{path('colores')}}" class="bread-current">Colores</a>
                  <a href="{{path('colores_new')}}" class="btn btn-info pull-right" style="color: white; margin-left: 5px;">Crear color</a>
                  <a href="{{path('colores_exportar')}}" class="btn btn-info pull-right" style="color: white; margin-left: 5px;">Exportar</a>
            </div>
            <div class="clearfix"></div>
        </div>
        <!-- Page heading ends -->
        <!-- Matter -->
        <div class="matter">
            <div class="container">
            <!-- Table -->
                <div class="row">
                <div class="col-md-12">
                    <div class="widget">
                        <div class="widget-head">
                            <div class="pull-left">Registro de colores</div>
                            <div class="clearfix"></div>
                        </div>
                        <div class="widget-content">
                            <table id="datatable" class="table table-striped table-bordered table-hover">
                                <thead>
                                    <tr>
                                        <th>Id</th>
                                        <th>Color</th>
                                        <th>Nombre</th>
                                        <th>Activo</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody id="cuerpoTabla">
                                    {% for entity in entities %}
                                        <tr id="registro-{{entity.id}}">
                                            <td><a href="{{ path('colores_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                                            <td>
                                                <span style="margin: 0 0 15px;overflow: hidden;padding: 5px 10px; background: #{{entity.color}}"></span> &nbsp; {{ entity.color }}
                                            </td>
                                            <td>{{ entity.nombre }}</td>
                                            <td>{{ entity.isActive | isActive | raw }}</td>
                                            <td>
                                                <button onclick="javascript:editarRegistro('{{ path('colores_edit', { 'id': entity.id }) }}')" class="btn btn-xs btn-warning"><i class="fa fa-pencil"></i> </button>
                                                <button onclick="javascript:editarRegistro('{{ path('colores_show', { 'id': entity.id }) }}', '#registro-{{entity.id}}')" class="btn btn-xs btn-info"><i class="fa fa-folder-open"></i> </button>
                                            </td>
                                        </tr>
                                    {% endfor %}
                                </tbody>
                            </table>
                            <div class="widget-foot">
                                <br/>
                                <br/>
                                <div class="clearfix"></div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Matter ends -->
    </div>
    <!-- Mainbar ends -->        
    <div class="clearfix"></div>
{% endblock %}

{% block javascripts %}
{{ parent() }}

<script src="{{asset('js/jquery-ui-1.9.2.custom.min.js')}}"></script> <!-- jQuery UI -->
<!-- jQuery Notification - Noty -->
<script src="{{asset('js/jquery.noty.js')}}"></script> <!-- jQuery Notify -->
<script src="{{asset('js/themes/default.js')}}"></script> <!-- jQuery Notify -->
<script src="{{asset('js/layouts/bottom.js')}}"></script> <!-- jQuery Notify -->
<script src="{{asset('js/layouts/topRight.js')}}"></script> <!-- jQuery Notify -->
<script src="{{asset('js/layouts/top.js')}}"></script> <!-- jQuery Notify -->
<!-- jQuery Notification ends -->

<script src="{{asset('js/datatables/js/jquery.dataTables.js')}}"></script>
<script src="{{asset('js/jquery.slimscroll.min.js')}}"></script> <!-- jQuery SlimScroll -->

<script src="{{asset('js/bootbox.min.js')}}"></script> <!-- Filter for support page -->
<script src="{{asset('js/custom.js')}}"></script> <!-- Custom codes -->

<script>
    var editarRegistro = function (url) {
        location.href = url;
    };

    var eliminarRegistro = function () {
    {% if is_granted('ROLE_ADMIN') %}
          bootbox.confirm("Esta seguro de eliminar el registro?", function (result) {
              if (result) {
                  $("#formEliminar").submit();
              }
          });
    {% else %}
          noty({text: 'No tienes los permisos suficientes para realizar esta accion', layout: 'bottom', type: 'warning', timeout: 2000});
    {% endif %}      
    };
    
    $(document).ready(function () {
        iniciarlizarSorteable();
    });
      
    function iniciarlizarSorteable(){
        $("#cuerpoTabla").sortable({
            items: "tr",
            cursor: 'move',
            opacity: 0.6,
            update: function() {
                sendOrderToServer();
            }
        });
        $("#cuerpoTabla").disableSelection();
    }
    function sendOrderToServer() {
        $(".loader").fadeIn();
        var order = $("#cuerpoTabla").sortable('serialize');
        $.ajax({
            url: '{{path('colores_ordenar')}}?' + order,
            type: 'PATCH',
            data: order,
            dataType: 'json',
            success: function(data){
                noty({
                    text: 'Actualizacion realizada',
                    layout:'topRight',
                    type:'success',
                    timeout:2000
                });
                console.log(data);
                $(".loader").fadeOut();
            },
            error: function(data){
                noty({
                    text: 'Error de actualizacion',
                    layout:'topRight',
                    type:'error',
                    timeout:2000
                });
                console.log(data);
                $(".loader").fadeOut();
            },
        });
    }
      
</script>


{% endblock %}


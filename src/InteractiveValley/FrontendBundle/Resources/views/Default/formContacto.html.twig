{% if status == 'send' %}
<div id="contactoSuccess" class="alert alert-success" role="alert">{{mensaje}}</div>
{% elseif status == 'notsend' %}
<div id="contactoError" class="alert alert-danger" role="alert">{{mensaje}}</div>
{% endif %}
<form onsubmit="return false;" id="formContacto" action="{{path('frontend_contacto')}}" method="post" class="form" novalidate="novalidate" role="form">
    <div class="form-group">
        <label for="contacto_name">{{"Nombre"|trans}}</label>
        {{ form_widget(form.name, {'attr': {'class': 'form-control','placeholder':'Nombre'|trans }}) }}
        <span class="errores"> 
            {{ form_errors(form.name) }}
        </span>
    </div>
    <div class="form-group">
        <label for="contacto_email">{{"Email"|trans}}</label>
        {{ form_widget(form.email, {'attr': {'class': 'form-control','placeholder':'Email'|trans}}) }}
        <span class="errores"> 
            {{ form_errors(form.email) }}
        </span>
    </div>
    <div class="form-group">
        <label for="contacto_subject">{{"Asunto"|trans}}</label>
        {{ form_widget(form.subject, {'attr': {'class': 'form-control','placeholder':'Asunto'|trans }}) }}
        <span class="errores"> 
            {{ form_errors(form.subject) }}
        </span>
    </div>
    <div class="form-group">
        <label for="contacto_telefono">{{"Telefono"|trans}}</label>
        {{ form_widget(form.telefono, {'attr': {'class': 'form-control','placeholder':'Tel√©fono'|trans }}) }}
        <span class="errores"> 
            {{ form_errors(form.telefono) }}
        </span>
    </div>    
    <div class="form-group">
        <label for="contacto_body">{{"Mensaje"|trans}}</label>
        {{ form_widget(form.body, {'attr': {'class': 'form-control','placeholder':'Mensaje'|trans }}) }}
        <span class="errores"> 
            {{ form_errors(form.body) }}
        </span>
    </div> 
    {{ form_rest(form) }}    
</form>

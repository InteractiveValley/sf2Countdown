{% extends 'FrontendBundle::layout.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
{% endblock %}

{% block contenido %}
    <section id="login">
        <article id="loginView" class="loginView">
            <header class="titulo-view well">
                <h2 class="titulo"><i class="fa fa-shopping-cart"></i>Login</h2>
            </header>
            <div class="contenido row">
                <div class="col-md-6">
                    <!-- Login form -->
                    <form class="form-horizontal" action='{{ path('login_check') }}' role="form"  method="post">
                        <!-- Email -->
                        <div class="form-group">
                            <label class="control-label col-lg-3" for="username">Email</label>
                            <div class="col-lg-9">
                                <input type="email" class="form-control" id="username" name="_username" value="{{ last_username }}" placeholder="Email">
                            </div>
                        </div>
                        <!-- Password -->
                        <div class="form-group">
                            <label class="control-label col-lg-3" for="password">Contraseña</label>
                            <div class="col-lg-9">
                                <input type="password" class="form-control"  id="password" name="_password" placeholder="Password">
                            </div>
                        </div>
                        <!-- Remember me checkbox and sign in button -->
                        <div class="form-group">
                            <div class="col-lg-9 col-lg-offset-3">
                                <div class="checkbox">
                                    <label>
                                        <input type="checkbox" id="remember_me" name="_remember_me" checked > Recuerdame
                                    </label>
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-9 col-lg-offset-3">
                            <button type="submit" class="btn btn-danger">Entrar</button>
                            <button type="reset" class="btn btn-default">Limpiar</button>
                            <div style="margin-top: 30px; margin-bottom: 30px">
                                <a href="{{path('recuperar')}}" class="btn btn-success">Olvido su contraseña?</a>
                            </div>    
                        </div>
                        <br />
                    </form>
                </div>
                <div class="col-md-1"></div>
                <div class="col-md-4 text-center" style="margin-top: 100px;">
                    <a href="{{path('registro')}}" class="btn btn-success btn-block">Registrarse</a>
                </div>
                <div class="col-md-1"></div>
            </div>     
        </article>   
    </section>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
{% endblock %}
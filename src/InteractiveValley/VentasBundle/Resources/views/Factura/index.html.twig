{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Factura list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Rfc</th>
                <th>Razonsocial</th>
                <th>Calle</th>
                <th>Numexterior</th>
                <th>Numinterior</th>
                <th>Cp</th>
                <th>Colonia</th>
                <th>Municipio</th>
                <th>Ciudad</th>
                <th>Estado</th>
                <th>Emailenvio</th>
                <th>Contacto</th>
                <th>Telefonocontacto</th>
                <th>Createdat</th>
                <th>Updatedat</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('facturas_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.rfc }}</td>
                <td>{{ entity.razonSocial }}</td>
                <td>{{ entity.calle }}</td>
                <td>{{ entity.numExterior }}</td>
                <td>{{ entity.numInterior }}</td>
                <td>{{ entity.cp }}</td>
                <td>{{ entity.colonia }}</td>
                <td>{{ entity.municipio }}</td>
                <td>{{ entity.ciudad }}</td>
                <td>{{ entity.estado }}</td>
                <td>{{ entity.emailEnvio }}</td>
                <td>{{ entity.contacto }}</td>
                <td>{{ entity.telefonoContacto }}</td>
                <td>{% if entity.createdAt %}{{ entity.createdAt|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{% if entity.updatedAt %}{{ entity.updatedAt|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('facturas_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('facturas_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('facturas_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}

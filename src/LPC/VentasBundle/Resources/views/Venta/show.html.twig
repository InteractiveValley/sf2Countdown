{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Venta</h1>

    <table class="record_properties">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Usuario</th>
                <td>{{ entity.usuario }}</td>
            </tr>
            <tr>
                <th>Importe</th>
                <td>{{ entity.importe }}</td>
            </tr>
            <tr>
                <th>Iva</th>
                <td>{{ entity.iva }}</td>
            </tr>
            <tr>
                <th>Pago</th>
                <td>{{ entity.pago }}</td>
            </tr>
            <tr>
                <th>Fechacompra</th>
                <td>{{ entity.fechaCompra|date('Y-m-d H:i:s') }}</td>
            </tr>
            <tr>
                <th>Envio</th>
                <td>{{ entity.envio }}</td>
            </tr>
        </tbody>
    </table>

        <ul class="record_actions">
    <li>
        <a href="{{ path('venta') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('venta_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>{{ form(delete_form) }}</li>
</ul>
{% endblock %}

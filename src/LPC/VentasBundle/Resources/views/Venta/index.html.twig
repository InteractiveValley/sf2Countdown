{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Venta list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Usuario</th>
                <th>Importe</th>
                <th>Iva</th>
                <th>Pago</th>
                <th>Fechacompra</th>
                <th>Envio</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('venta_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.usuario }}</td>
                <td>{{ entity.importe }}</td>
                <td>{{ entity.iva }}</td>
                <td>{{ entity.pago }}</td>
                <td>{% if entity.fechaCompra %}{{ entity.fechaCompra|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{{ entity.envio }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('venta_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('venta_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('venta_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}

{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Pago</h1>

    <table class="record_properties">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Venta</th>
                <td>{{ entity.venta }}</td>
            </tr>
            <tr>
                <th>Importe</th>
                <td>{{ entity.importe }}</td>
            </tr>
            <tr>
                <th>Iva</th>
                <td>{{ entity.iva }}</td>
            </tr>
            <tr>
                <th>Fechapago</th>
                <td>{{ entity.fechaPago|date('Y-m-d H:i:s') }}</td>
            </tr>
            <tr>
                <th>Formapago</th>
                <td>{{ entity.formaPago }}</td>
            </tr>
        </tbody>
    </table>

        <ul class="record_actions">
    <li>
        <a href="{{ path('pago') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('pago_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>{{ form(delete_form) }}</li>
</ul>
{% endblock %}

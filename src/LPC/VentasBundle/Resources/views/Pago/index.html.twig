{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Pago list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Venta</th>
                <th>Importe</th>
                <th>Iva</th>
                <th>Fechapago</th>
                <th>Formapago</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('pago_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.venta }}</td>
                <td>{{ entity.importe }}</td>
                <td>{{ entity.iva }}</td>
                <td>{% if entity.fechaPago %}{{ entity.fechaPago|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{{ entity.formaPago }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('pago_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('pago_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('pago_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}

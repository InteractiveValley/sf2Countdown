ul.list-carrito
	padding 0
	& li.item-carrito
		/**/
		border-top 1px solid color_rosa
		list-style none
		margin .5em 0px
		padding .5em 0px
		width 100%
		&:last-child
			border-bottom 1px solid color_rosa
		&.inactive .imagen-producto-carrito
			opacity 0.5
		& .imagen-producto-carrito
			margin 0px 0px 0px 5px
			overflow hidden
			width 98px
			height 80px
			position relative
			& figcaption
				background-color color_rosa
				bottom -80px
				color white
				font-size 14px
				height 30px
				left 0px
				line-height 30px
				position absolute
				text-align center
				transition bottom .5s ease-out
				width 100%
				& a
					color white
					&:hover
						text-decoration none
			& .reloj-inactivo
				position absolute
				top 0px
				left 0px
				color color_rosa
		& .producto-carrito
			position relative
			margin-left 10px
			color black
			& .titulo-producto-carrito
				margin 0
				font-size .8em
			& .precio-producto-carrito
				display block
				font-size .8em
			& .tiempo-producto-carrito
				display block
				font-size .8em
			& .tiempo-producto-reloj
				color color_rosa
			& .close-producto-carrito
				position absolute
				top -10px
				right 0px
				font-size 1.1em
				font-weight normal
				& a
					color color_rosa
			& .tiempo-producto-completo
				background-color color_rosa
				& .tiempo-producto-reactivar
					display block
					color white
					font-size .8em
					text-align center
					padding 5px 0px
					cursor pointer
	& li.item-carrito:hover .imagen-producto-carrito figcaption

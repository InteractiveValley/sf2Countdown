@import 'nib'
@import 'normalize'


box-sizing()
	-webkit-box-sizing arguments
	-moz-box-sizing arguments
	box-sizing arguments
	
opacity(n)
	opacity n
	if support-for-ie
		filter unquote('progid:DXImageTransform.Microsoft.Alpha(Opacity=' + round(n * 100) + ')')

color_rojo = #E34A3A
color_verde_claro = #56C5B6
color_verde_oscuro = #27AA98
color_gris_claro = #F4F4F4
color_gris_oscuro = #C3C3C3
color_naranja_claro = #EB9A53
color_naranja_oscuro = #E68229
color_rosa = #DF2E72

/* colores filtro */

filtro_color_carmesi = #9F0700
filtro_color_amarillo = #FA9000
filtro_color_cafe = #7F5400
filtro_color_azul = #1DA5FF
filtro_color_azul_marino = #084664
filtro_color_verde = #3CAE55
filtro_color_fiusa = #F500FC
filtro_color_gris = #A0A0A0

article.filtro-categorias
		border-top 1px solid color_gris_oscuro
		border-bottom 1px solid color_gris_oscuro
		position relative
	& .filtro
		height 2.9em
		line-height 2.9em
		&:last-child
			border-top 1px solid color_gris_oscuro
	& .filtro-titulo
		text-transform uppercase
		font-size .8em
		background-color color_gris_claro
	& #valor-precio
		color color_rosa
	& .color
		font-size 2em
		margin 8px 4px 0px
		float left
		cursor pointer
		&.color-carmesi
			color filtro_color_carmesi
		&.color-amarillo
			color filtro_color_amarillo
		&.color-cafe
			color filtro_color_cafe
		&.color-azul
			color filtro_color_azul
		&.color-azul_marino
			color filtro_color_azul
		&.color-verde
			color filtro_color_verde
		&.color-fiusa
			color filtro_color_fiusa
		&.color-gris
			color filtro_color_gris
		&.inactive
			opacity 0.5
	& .filtro-ordenar
		position absolute
		top 0px
		right 0px
		& .filtro-ordenar-por-precio
			position absolute
			top 8px
			right 0px
			& .btn-grupo
				width 100%
				height 3em
				& .btn-verde-countdown
					color white
					background-color color_verde_claro
					border-color color_verde_claro
		& .filtro-filtrar
		& .filtro-ver-todos
			position absolute
			top 3em 
			height 3em
			width 50%
			line-height 3em
			background-color color_gris_oscuro
			& span 
				display block
				text-align center
				cursor pointer
				&.active 
					background-color color_rosa
					color white
		& .filtro-filtrar
			left 0px
		& .filtro-ver-todos
			right 0px
			
			

article.producto
	float left
	margin 3px
	overflow hidden
	border 1px solid color_gris_oscuro
	box-sizing border-box
	&.imagen_chica
		width 238px
		height 238px
	&.promocional
		box-shadow 0 0 4px 1px #DF2E72
	&.imagen_grande
		width 484px
		height 484px
		& .agregar-carrito
			right 45%
	& .imagen-producto
		margin 0px
		position relative
		& figcaption
			background-color white
			bottom -50px
			height 50px
			left 0px
			opacity 0
			position absolute
			transition all .3s ease-out
			width 100%
	& .imagen-producto-cantidad-carrito
		position absolute 
		right 0px
		top 0px
		display block 
		height 20px
		width 20px
		color white 
		background-color color_rosa
	&:hover .imagen-producto figcaption
		bottom 0px
		opacity 1
	& .precio-producto
		color color_rosa
		font-size 1.2em
		height 30px 
		left 1px
		position absolute
		top 1px
		display block
	& .inventario-producto
		bottom 1px
		color color_rosa
		font-size .9em
		height 30px
		line-height 30px
		left 1px
		position absolute
		display block
	& .agregar-carrito
		background-color white
		color color_gris_oscuro
		cursor pointer
		display block
		font-size 1.2em
		position absolute 
		right 50px
		top 1px
	& .ver-producto
		background-color color_rosa
		bottom 1px
		color white
		cursor pointer
		display block
		font-size .9em
		height 20px
		position absolute
		right 0px
		width 20px


article.producto-detalle
	& .producto-detail
		text-align center
		margin 0 auto
		& .titulo-producto
			color color_rosa
			text-align center
			text-transform capitalize
		& .descripcion-producto
			font-size 1em
			text-align left
			width 100%
		& .precio-producto
			color color_verde_oscuro
			font-size 1.2em
			height 30px 
			width 100%
			margin-top 3em
			display block
		& .inventario-producto
			background-color color_verde_oscuro
			color white
			font-size 1em
			height 30px
			width 100%
			margin-top 2em
			& span
				display inline-block
				vertical-align top
		& .agregarCarrito
			background-color color_rosa
			color white
			display block
			font-size 1em
			height 30px 
			line-height 30px
			width 100%
			margin-top 2em
			cursor pointer
			display block
		
